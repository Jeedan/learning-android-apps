<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 21+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 21+ devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Material">
        <!-- API 21 theme customizations can go here. -->
     	<!-- Main theme colors -->
	    <!--   your app branding color for the app bar (Action bar_)-->
	    <item name="android:colorPrimary">@color/dark_gray</item>
	    <!--   darker variant for the status bar and contextual app bars -->
	    <item name="android:colorPrimaryDark">@color/black</item>
	    <!--   theme UI controls like checkboxes and text fields -->
	    <item name="android:colorAccent">@color/orange</item>
	    <!--   winow background -->
	    <item name="android:windowBackground">@color/medium_gray</item>
	    <!--   Text but don't know if it is for all texts -->
	    <item name="android:textColorPrimary">@color/light_gray</item>
    </style>
    
        <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">    
        </style>
</resources>
